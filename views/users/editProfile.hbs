<head>
   <link href="/stylesheets/signin.css" rel="stylesheet">
</head>

<div class="postsMain">
  
  {{#if user.image}}
  <img id="profilePic" src="{{user.image}}" alt="">
  {{/if}}
  <h1 class="h3 mb-3 font-weight-normal editProf">Edit Your Profile:</h1>
  <div id="profileInfo">
  <div class="profileItems edit"><h1>Username:</h1> <h2>@{{user.username}}</h2></div>
  <div class="profileItems edit"><h1>Email:</h1> <h2>{{user.email}}</h2></div>
  <form class="form-signin" id="formEdit" action="/user/{{user._id}}/edit" method="POST" enctype="multipart/form-data">
    <label class="sr-only">First Name: </label>
    <input  class="form-control" type="text" name="firstName" value="{{user.firstName}}" required>
    <label class="sr-only">Last Name: </label>
    <input  class="form-control" type="text" name="lastName" value="{{user.lastName}}" required>
    <label class="sr-only">Profile Image: </label>
    <input  class="form-control" type="file" placeholder="Profile Picture" name="image">
    </div>
    <button class="btn btn-lg btn-secondary" type="submit">Edit</button>
  </form>
</div>